<UserControl x:Class="Afsluttende_GF2_Projekt.Views.KPI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent" FontFamily="montserrat">

    <Grid Height="650" Width="700" Background="Transparent">
        <TextBlock Text="Welcome to KPI!" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center" />
        <Button
            x:Name="VisDataKnap"
            FontWeight="Bold"
            Height="50" Margin="10,590,531,10"
            Content="Vis/skjul data"
            Click="Data_Button_Click"/>

        <DataGrid
            x:Name="ExcelDataGrid"
            AutoGenerateColumns="True"
            Margin="10,50,10,60"
            Background="Transparent"
            Visibility="Hidden"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"/>
    </Grid>

</UserControl>
